    <script>
        // Track selected courses for each package
        let selectedCourses = {
            'parent-combo': null,
            'student-combo': null
        };

        function selectCourse(ageGroup, packageType) {
            // Update selected course for this package
            selectedCourses[packageType] = ageGroup;
            
            // Update UI - remove selected class from all courses in this package
            const packageCard = document.querySelector(`[data-package="${packageType}"]`);
            if (packageCard) {
                const allCourseItems = packageCard.querySelectorAll('.course-item');
                const allButtons = packageCard.querySelectorAll('.select-course-btn');
                
                allCourseItems.forEach(item => item.classList.remove('selected'));
                allButtons.forEach(btn => {
                    btn.classList.remove('selected');
                    btn.textContent = 'Select';
                });
                
                // Add selected class to chosen course
                const selectedItem = packageCard.querySelector(`[data-age="${ageGroup}"]`);
                const selectedButton = selectedItem.querySelector('.select-course-btn');
                
                if (selectedItem && selectedButton) {
                    selectedItem.classList.add('selected');
                    selectedButton.classList.add('selected');
                    selectedButton.textContent = 'Selected';
                }
            }
        }

        // Enroll in package
        function enrollInPackage(packageId) {
            const selectedCourse = selectedCourses[packageId];
            
            if (!selectedCourse) {
                alert('Please select a course first!');
                return;
            }
            
            // Check if user is logged in via localStorage
            const user = localStorage.getItem('learnSignUser');
            if (user) {
                const userData = JSON.parse(user);
                alert(`🎉 Welcome ${userData.name}! Redirecting to ${selectedCourse} course...`);
                window.location.href = `/courses/${selectedCourse}`;
            } else {
                alert(`Please log in to enroll in the ${packageId} package`);
                window.location.href = '/login';
            }
        }

        // Preview package
        function previewPackage(packageId) {
            const selectedCourse = selectedCourses[packageId];
            
            if (!selectedCourse) {
                alert('Please select a course first to preview!');
                return;
            }
            
            // Redirect to course preview
            window.location.href = `/courses/${selectedCourse}`;
        }

        // Add scroll animations
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, observerOptions);

        // Observe all animated elements
        document.addEventListener('DOMContentLoaded', () => {
            // Animate package cards
            document.querySelectorAll('.package-card').forEach((card, index) => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(30px)';
                card.style.transition = `opacity 0.6s ease ${index * 0.2}s, transform 0.6s ease ${index * 0.2}s`;
                observer.observe(card);
            });

            // Animate testimonial cards
            document.querySelectorAll('.testimonial-card').forEach((card, index) => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(30px)';
                card.style.transition = `opacity 0.6s ease ${index * 0.1}s, transform 0.6s ease ${index * 0.1}s`;
                observer.observe(card);
            });
        });
    </script>
